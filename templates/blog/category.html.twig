{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="container justify-content-center">
        {% if category is null %}
            <h1 class="text-center">Aucune catégorie ne porte ce nom.</h1>
        {% else %}
            <h3 class="text-center">{{ category.name }}</h3> <br />
                <div class="row justify-content-center">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Article</th>
                            <th scope="col">Description</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for article in articles %}
                        <tr>
                            <th scope="row">{{ article.id }}</th>
                            <td>{{ article.title }}</td>
                            <td>{{ article.content }}</td>
                            <td><a href="{{ path('blog_article', { 'articleTitle': article.title }) }}"><button type="button" class="btn btn-success">Voir l'article</button></a></td>
                            <td><a href="{{ path('article_edit', { 'id': article.id }) }}"><button type="button" class="btn btn-warning">Modifier l'aticle</button></a></td>
                            <td>{{ include('article/_delete_form.html.twig') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
        {% endif %}
    <div class="row justify-content-center mt-5">
        <a href="{{ path('category_edit', { 'id': category.id }) }}"><button type="button" class="btn btn-warning mr-5">Mofidier la catégorie</button></a>

        {{ include('category/_delete_form.html.twig') }}
    </div>
    </div>
{% endblock %}
